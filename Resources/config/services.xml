<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikulacoremanagermodule.releasemanager.class">Zikula\Module\CoreManagerModule\Manager\ReleaseManager</parameter>
        <parameter key="zikulacoremanagermodule.api.releases.v1.class">Zikula\Module\CoreManagerModule\Api\ReleasesV1Api</parameter>
    </parameters>

    <services>
        <service id="zikulacoremanagermodule.releasemanager" class="%zikulacoremanagermodule.releasemanager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="router" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="zikula_core_manager_module.github_api_wrapper" class="Zikula\Module\CoreManagerModule\Manager\GitHubApiWrapper">
        </service>
        <service id="zikula_core_manager_module.jenkins_api_wrapper" class="Zikula\Module\CoreManagerModule\Manager\JenkinsApiWrapper">
        </service>
        <service id="zikulacoremanagermodule.api.releases.v1" class="%zikulacoremanagermodule.api.releases.v1.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="zikulacoremanagermodule.releasemanager" />
        </service>
    </services>
</container>
